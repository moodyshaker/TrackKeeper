<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/gray_500</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/white</item>
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="TextColor">@color/black_window</item>
        <item name="BSBActionButton">@color/gray_50</item>
        <item name="TintColor">@color/gray_600</item>
        <item name="SecondTextColor">@color/gray_300</item>
        <item name="BackgroundColor">@color/gray_200</item>
        <item name="DialogColors">@color/custom_color</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/gray_500</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/black_window</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:windowBackground">@color/black_window</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="TextColor">@color/white</item>
        <item name="SecondTextColor">@color/gray_300</item>
        <item name="BSBActionButton">@color/gray_600</item>
        <item name="TintColor">@color/gray_50</item>
        <item name="BackgroundColor">@color/custom_color</item>
        <item name="DialogColors">@color/gray_200</item>
    </style>

    <style name="ProgressBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
    </style>
</resources>